<%= form_for([@project, @feature]) do |f| %>
  <%= render :partial => "shared/form_errors",
    :locals => { :object => @feature } %>

  <%= f.hidden_field :project_id %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit %>| <%= link_to "Cancel", @project %>
  </div>
<% end %>
