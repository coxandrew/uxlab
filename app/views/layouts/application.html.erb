<!DOCTYPE html>
<html>
<head>
  <title>UX Lab</title>
  <%= stylesheet_link_tag "reset", "uxlab" %>
  <%= javascript_include_tag :defaults, 'livecss' %>
  <script>
  $(document).ready(function() {
    livecss.watchAll();
  });
  </script>
  <%= csrf_meta_tag %>
</head>

<% sidebar = render("shared/sidebar")  %>
<% num_columns = (sidebar.length > 0) ? "two_column" : "one_column" %>
<body class="<%= body_class(controller) %> <%= num_columns %>">

<div id="wrapper">
  <%= render "shared/header" %>
  <%= render "shared/project_tabs" %>

  <%= sidebar %>

  <div id="main">
    <%= render "shared/notices" %>
    <%= yield %>
  </div>

  <%= render "shared/footer" %>
</div>

</body>
</html>
