<% form_for([@project, @feature, @flow, @screen],
  :html => { :multipart => true }) do |f| %>

  <%= render :partial => "shared/form_errors",
    :locals => { :object => @screen } %>

  <%= f.hidden_field :flow_id %>

  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :caption %><br />
    <%= f.text_area :caption %>
  </div>

  <div class="actions">
    <%= f.submit %> | <%= link_to "Cancel", [@project, @feature, @flow] %>
  </div>
<% end %>