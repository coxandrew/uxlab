<div id="login">
  <h2>Welcome to UX Lab!</h2>

  <%= form_tag sessions_path do %>
    <p>
      <%= label_tag :username, "Username" %><br />
      <%= text_field_tag :username, params[:username], :class => "first_input" %>
    </p>
    <p>
      <%= label_tag :password, "Password" %><br />
      <%= password_field_tag :password %>
    <p class="actions">
      <%= submit_tag "Sign in" %>
    </p>
  <% end %>
</div>